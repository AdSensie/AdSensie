<div data-controller="sync">
  <%= form_with url: sync_dashboard_path, method: :post, data: { action: "submit->sync#sync" } do |f| %>
    <%= f.button type: "submit", class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition flex items-center gap-2", data: { sync_target: "button" } do %>
      <svg class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" data-sync-target="spinner">
        <circle class="opacity-25 animate-spin" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
      <span data-sync-target="buttonText">Sync Now</span>
    <% end %>
  <% end %>
</div>
